{
  "name": "mediagata-extension",
  "version": "0.20.0",
  "description": "Extension for MediaGata apps",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npx parcel build src/* --out-dir dist/ && npx copyfiles manifest.json dist && npx copyfiles icons/* dist",
    "watch": "npx parcel watch src/*  --out-dir dist/ && npx copyfiles manifest.json dist && npx copyfiles icons/* dist"
  },
  "author": "Andrew Bastin",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.0.133",
    "@types/node": "^17.0.14",
    "copyfiles": "^2.4.1",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-web-ext-tool": "^0.2.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.2",
    "web-ext": "^6.7.0"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "webextension-polyfill-ts": "^0.25.0"
  }
}
