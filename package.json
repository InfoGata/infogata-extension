{
  "name": "infogata-extension",
  "version": "1.0.0",
  "description": "Extension for InfoGata apps",
  "author": "Elijah Green",
  "license": "MIT",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "start": "parcel manifest.json --host localhost --target webext-dev",
    "build": "parcel build manifest.json --target webext-prod",
    "create-zip": "npm run build; cd dist/webext-prod; zip -r -FS ../extension.zip *"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.3.2",
    "@types/chrome": "0.0.133",
    "@types/node": "^17.0.14",
    "parcel": "^2.6.1",
    "parcel-reporter-web-ext": "^0.3.2",
    "typescript": "^4.2.2",
    "web-ext": "^6.7.0"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "lit-html": "^2.2.1",
    "webextension-polyfill-ts": "^0.25.0"
  }
}
