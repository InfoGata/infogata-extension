{
  "manifest_version": 3,
  "name": "InfoGata Extension",
  "version": "1.0.0",
  "description": "Extension for Audiogata.com, Videogata.com, and ReaderGata.com",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "src/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "InfoGata Extension",
    "default_popup": "src/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@infogata.com"
    }
  },
  "permissions": ["storage", "tabs", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["src/hook.ts", "src/content.ts"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
